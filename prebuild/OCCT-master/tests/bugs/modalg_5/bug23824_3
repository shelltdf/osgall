puts "============"
puts "OCC23824"
puts "============"
puts ""
#######################################################################
# Bad results of sweep operation when a path curve has unpredictable torsion along its way.
#######################################################################

set BugNumber OCC23824

restore [locate_data_file bug23824_Case2_Path.brep] spine 
restore [locate_data_file bug23824_Case2_Profile.brep] profile 

wire spine spine
wire profile profile

mksweep spine
setsweep -DT
addsweep profile

buildsweep result

checkprops result -s 848.989 
checkshape result

checknbshapes result -vertex 2 -edge 3 -wire 1 -face 1 -shell 1 -solid 0 -compsolid 0 -compound 0 -shape 8
checkview -display result -2d -path ${imagedir}/${test_image}.png
