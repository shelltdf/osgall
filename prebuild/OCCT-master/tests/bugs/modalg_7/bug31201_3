checkshape rsp
checknbshapes rsp -face 62 -wire 62

bbop result 4

checkshape result
checkprops result -l 62.6295
checknbshapes result -vertex 31 -edge 31

checksection result -r 0

checkview -display result -2d -path ${imagedir}/${test_image}.png
