puts "============"
puts "OCC20297"
puts "============"
puts ""
#######################################################################
# Boolean operations (for ex. fuse) fail for given shapes
#######################################################################
#######################################################################

set BugNumber OCC20297

puts "Load first shape ..."
restore [locate_data_file OCC20297_1.brep] a1 
explode a1
renamevar a1_1 b1
puts "Load second shape ..."
restore [locate_data_file OCC20297_2.brep] b2 

puts "Prepare boolean operation ..."
bop b1 b2

puts "Start boolean operation ..."
boptuc result
puts "Finish boolean operation ..."

checkprops result -s 8402.56 
checkshape result

checknbshapes result -vertex 128 -edge 192 -wire 68 -face 68 -shell 2 -solid 2 -compsolid 0 -compound 1 -shape 461

checkview -display result -2d -path ${imagedir}/${test_image}.png
