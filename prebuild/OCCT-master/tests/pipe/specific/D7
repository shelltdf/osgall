restore [locate_data_file OCC1477_3dPolyline_c0.brep] s1 
restore [locate_data_file OCC1477_profile1_polygon.brep] e1 
wire s2 e1

puts "###############################################################################"
puts "# (case /-/-T -R/-R/)"
puts "###############################################################################"

checkshape s1
checkshape s2

mksweep s1

addsweep s2 -T -R
if [catch { buildsweep result -R} res] {
  puts "Faulty OCC1477: buildsweep is wrong"
}

checkprops result -s 26300.3

checknbshapes result -vertex 43 -edge 84 -wire 35 -face 35 -shell 1 -solid 0 -compsolid 0 -compound 0 -shape 198
