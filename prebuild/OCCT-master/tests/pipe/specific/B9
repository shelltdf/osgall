restore [locate_data_file OCC1477_3dPolyline_c0.brep] s1
restore [locate_data_file OCC1477_profile1_circle.brep] e1
wire s2 e1

puts "###############################################################################"
puts "# (case /-CF/-R/-R/)"
puts "###############################################################################"

checkshape s1
checkshape s2

mksweep s1

setsweep -CF
addsweep s2 -R
if [catch { buildsweep result -R} res] {
  puts "Faulty OCC1477: buildsweep is wrong"
}

checkprops result -s 26254.1

checknbshapes result -vertex 11 -edge 25 -wire 8 -face 8 -shell 1 -solid 0 -compsolid 0 -compound 0 -shape 53
