puts "============"
puts "OCC7166"
puts "============"
puts ""
#######################################################################
# Improvement of API of ThruSection
#######################################################################

set BugNumber OCC7166

# spine
polyline s1 0 0 20 0 0 -20

# profile
circle c1 0 0 0 5
mkedge ec1 c1
wire s2 ec1

# 1 vertex
vertex v1 40 0 -20

# 2 vertex
vertex v2 40 0 20

mksweep s1

addsweep v1
addsweep s2
addsweep v2

buildsweep result


checkprops result -s 1259.14

checknbshapes result -vertex 2 -edge 3 -wire 1 -face 1 -shell 1 -solid 0 -compsolid 0 -compound 0 -shape 8


set index [lsearch [whatis result] Closed]
if {$index == -1} {
  puts "Faulty ${BugNumber} : result is not Closed shape"
  
}


