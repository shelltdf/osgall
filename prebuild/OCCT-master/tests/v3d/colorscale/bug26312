vinit View3 w=500 h=300

# dump all views
vactivate View2
vcolorscale cs -height 500
vdump ${imagedir}/${casename}_View2.png
vactivate View3
vcolorscale cs -height 300
vdump ${imagedir}/${casename}_View3.png
